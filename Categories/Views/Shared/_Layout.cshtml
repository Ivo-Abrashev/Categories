<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Categories_25</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Categories_25.styles.css" asp-append-version="true" />
    <style>
        body {
            /* Прозрачен фон с градиент */
            background: linear-gradient(to bottom right, rgba(255,255,255,0.9), rgba(173,216,230,0.8)),
                        url('/images/background.jpg') no-repeat center center fixed;
            background-size: cover;
        }

        .navbar-custom {
            background: rgba(255, 25, 255, 0.6); /* прозрачен ефект */
            backdrop-filter: blur(6px);
            box-shadow: 0 2px 6px rgba(0,0,0,0.2);
        }

        .navbar-brand img {
            height: 40px;
            border-radius: 8px;
        }

        .dropdown-menu {
            background-color: rgba(255,255,255,0.9);
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light navbar-custom border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Лого, водещо към началната страница -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="Logo" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <!-- Начална страница -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Начало</a>
                        </li>

                        <!-- Падащо меню за Категории -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="categoriesDropdown"
                               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Категории
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="categoriesDropdown">
                                <li><a class="dropdown-item" asp-controller="Categories" asp-action="Index">Всички категории</a></li>
                                <li><a class="dropdown-item" asp-controller="Categories" asp-action="Details" asp-route-id="1">Технологии</a></li>
                                <li><a class="dropdown-item" asp-controller="Categories" asp-action="Details" asp-route-id="2">Култура</a></li>
                                <li><a class="dropdown-item" asp-controller="Categories" asp-action="Details" asp-route-id="3">Спорт</a></li>
                            </ul>
                        </li>

                    </ul>

                    <!-- Бутон за вписване -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Login">Вписване</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Categories_25 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
